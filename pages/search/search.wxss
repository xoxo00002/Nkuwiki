/* 美化的搜索页面样式 */
page {
  background-color: #f7f9fc;
  font-size: 14px;
  color: #333;
  line-height: 1.5;
}

.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* 搜索框样式 */
.search-container {
  padding: 10rpx 30rpx 10rpx;
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: #f7f9fc;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: rgba(245, 246, 250, 0.95);
  border-radius: 40rpx;
  padding: 10rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
}

.search-box-hover {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
  opacity: 0.7;
  padding: 6rpx;
  filter: invert(0.6) brightness(0.4) contrast(1.2);
}

.mic-icon {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
  opacity: 0.7;
  padding: 6rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

/* 分类按钮区域 */
.category-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  padding: 0 20rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 140rpx;
  opacity: 0.9;
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 8rpx;
  border-radius: 50%;
  background-color: #f2f4f8;
}

.category-text {
  font-size: 24rpx;
  color: #333;
}

/* 贡献提示样式 */
.contribution-tip {
  display: flex;
  align-items: center;
  background-color: rgba(245, 246, 250, 0.95);
  border-radius: 16rpx;
  padding: 12rpx 20rpx;
  margin-top: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.token-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 24rpx;
  color: #666;
  flex: 1;
}

/* 内容区域 */
.content-area {
  padding: 30rpx;
  min-height: calc(100vh - 240rpx);
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 加载指示器 */
.loading-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0 60rpx;
  margin-top: -40rpx;
  flex: 1;
}

.loading-dots {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-dot {
  width: 16rpx;
  height: 16rpx;
  background-color: #4a90e2;
  border-radius: 50%;
  margin: 0 8rpx;
  animation: bounceDot 1.4s infinite ease-in-out both;
}

.loading-dot:nth-child(1) {
  animation-delay: -0.32s;
  background-color: #5d6df1;
}

.loading-dot:nth-child(2) {
  animation-delay: -0.16s;
  background-color: #4a90e2;
}

.loading-dot:nth-child(3) {
  background-color: #3fcca8;
}

@keyframes bounceDot {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}

.loading-text {
  font-size: 30rpx;
  color: #4a90e2;
  margin-top: 24rpx;
  letter-spacing: 0.5rpx;
  font-weight: 500;
}

/* 结果容器 */
.result-container {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  animation: fadeIn 0.3s ease;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 文本内容 */
.text-content {
  padding: 16rpx 0;
  font-size: 30rpx;
  line-height: 1.8;
  min-height: 100rpx;
  max-height: 800rpx;
  word-break: break-all;
  white-space: pre-wrap;
  position: relative;
  color: #333;
  letter-spacing: 0.3rpx;
  flex: 1;
}

/* 输入光标 */
.typing-cursor {
  display: inline-block;
  width: 6rpx;
  height: 32rpx;
  background-color: #4a90e2;
  margin-left: 4rpx;
  vertical-align: middle;
  animation: blinkCursor 0.8s infinite;
  position: relative;
  top: 2rpx;
  box-shadow: 0 0 8rpx rgba(74, 144, 226, 0.8);
  border-radius: 3rpx;
}

@keyframes blinkCursor {
  0% { opacity: 0; }
  50% { opacity: 1; }
  100% { opacity: 0; }
}

/* 富文本元素样式 */
.stream-link {
  color: #0072F5;
  text-decoration: underline;
  display: inline;
  word-break: break-all;
  position: relative;
  padding: 0 2rpx;
  transition: all 0.2s ease;
  word-wrap: break-word;
}

.stream-link:after {
  content: "";
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="%230072F5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path></svg>');
  background-size: contain;
  background-repeat: no-repeat;
  vertical-align: middle;
  margin-left: 4rpx;
  position: relative;
  top: -4rpx;
  opacity: 0.7;
}

.stream-email {
  color: #0092B8;
  text-decoration: underline;
  word-break: break-all;
  display: inline;
}

.stream-quote {
  display: block;
  color: #555;
  border-left: 6rpx solid #ddd;
  padding: 8rpx 16rpx;
  margin: 10rpx 0;
  font-style: italic;
  background-color: #f9f9f9;
}

.stream-code {
  font-family: Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  padding: 2rpx 8rpx;
  font-size: 28rpx;
  color: #d63200;
  white-space: pre-wrap;
  display: inline;
}

/* 动画效果 */
@keyframes fadeInLink {
  from { opacity: 0; transform: translateY(4rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.stream-link, .stream-email, .stream-code {
  animation: fadeInLink 0.3s ease;
}

/* 底部按钮操作区 */
.result-actions {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-top: 1px solid #f0f2f7;
  margin-top: 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: transparent;
  border-radius: 12rpx;
  padding: 6rpx 16rpx;
  transition: all 0.2s;
  flex: 1;
}

.action-btn-hover {
  background-color: #f5f7fa;
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  opacity: 0.8;
}

.action-btn text {
  font-size: 24rpx;
  color: #666;
}

/* 建议问题样式 */
.suggested-questions {
  margin-top: 20rpx;
  padding: 20rpx 0;
  border-top: 1px solid #f0f2f7;
}

.suggest-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #444;
  margin-bottom: 16rpx;
}

.question-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.question-item {
  padding: 16rpx 24rpx;
  background-color: #f7f9fc;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #4a90e2;
  border: 1px solid #e8ecf0;
  transition: all 0.2s;
}

.question-item:active {
  background-color: #e8f0ff;
  transform: scale(0.98);
}

/* 来源区域样式 */
.sources-container {
  margin-top: 20rpx;
  padding: 20rpx 0;
  border-top: 1px solid #f0f2f7;
}

.sources-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #444;
  margin-bottom: 16rpx;
}

.sources-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.source-item {
  padding: 16rpx;
  background-color: #f9fafb;
  border-radius: 12rpx;
  border-left: 4rpx solid #4a90e2;
}

.source-content {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.source-type {
  font-size: 24rpx;
  font-weight: 500;
  color: #4a90e2;
}

.source-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.source-preview {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.source-author {
  font-size: 22rpx;
  color: #888;
  text-align: right;
  margin-top: 6rpx;
  font-style: italic;
}

/* 美化标题 */
.stream-h1, .stream-h2, .stream-h3, .stream-h4, .stream-h5, .stream-h6 {
  font-weight: bold;
  margin: 24rpx 0 12rpx;
  color: #333;
  line-height: 1.3;
}

.stream-h1 {
  font-size: 40rpx;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 12rpx;
  margin-bottom: 24rpx;
}

.stream-h2 {
  font-size: 36rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 8rpx;
}

.stream-h3 {
  font-size: 32rpx;
}

.stream-h4 {
  font-size: 30rpx;
}

.stream-h5, .stream-h6 {
  font-size: 28rpx;
}

/* 列表项 */
.stream-list-item {
  padding: 4rpx 0 4rpx 16rpx;
  margin: 6rpx 0;
  position: relative;
}

/* 代码块内容 */
.code-block-content {
  display: block;
  white-space: pre-wrap;
  word-break: break-all;
  font-family: Consolas, Monaco, 'Andale Mono', monospace;
  font-size: 26rpx;
  line-height: 1.6;
  padding: 10rpx 0;
  tab-size: 2;
}

/* 复制代码按钮 */
.copy-code-btn {
  position: absolute;
  right: 10rpx;
  top: 8rpx;
  background: #e0e0e0;
  border-radius: 6rpx;
  padding: 4rpx 12rpx;
  font-size: 22rpx;
  color: #555;
  opacity: 0.8;
  z-index: 1;
}

/* 链接样式优化 */
.stream-link {
  display: inline;
  word-break: break-all;
  position: relative;
  padding: 0 2rpx;
  transition: all 0.2s ease;
  word-wrap: break-word;
  font-weight: 500;
  text-decoration: none;
  border-bottom: 1rpx solid #0072F5;
}

/* 表格样式 */
.stream-table {
  width: 100%;
  margin: 16rpx 0;
  border-collapse: collapse;
  overflow-x: auto;
  display: block;
}

.stream-table-row {
  display: flex;
  border-bottom: 1rpx solid #eee;
}

.stream-table-header .stream-table-cell {
  font-weight: bold;
  background-color: #f5f7fa;
}

.stream-table-cell {
  flex: 1;
  padding: 12rpx 16rpx;
  font-size: 28rpx;
  border-right: 1rpx solid #eee;
  min-width: 160rpx;
  word-break: break-word;
}

.stream-table-cell:last-child {
  border-right: none;
}

/* 测试按钮 */
.test-btn {
  margin-top: 40rpx;
  padding: 16rpx 32rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.2s;
}

.test-btn:active {
  background-color: #e0e0e0;
  transform: scale(0.98);
}

/* 链接样式 */
.md-link {
  color: #1890ff;
  text-decoration: underline;
  display: inline;
  padding: 2rpx 4rpx;
  border-radius: 4rpx;
  transition: all 0.3s ease;
}

.md-link:active {
  opacity: 0.7;
  background-color: rgba(24, 144, 255, 0.1);
}

/* 富文本内容样式增强 */
.text-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  padding: 20rpx;
}

.text-content .h1,
.text-content .h2,
.text-content .h3 {
  font-weight: bold;
  margin: 20rpx 0;
  color: #222;
}

.text-content .h1 {
  font-size: 36rpx;
}

.text-content .h2 {
  font-size: 32rpx;
}

.text-content .h3 {
  font-size: 30rpx;
}

.text-content .md-p {
  margin: 16rpx 0;
}

.text-content .md-code {
  background: #f5f5f5;
  padding: 16rpx;
  border-radius: 8rpx;
  font-family: monospace;
  white-space: pre-wrap;
  word-break: break-all;
  margin: 16rpx 0;
}

.text-content .md-inline-code {
  background: #f5f5f5;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-family: monospace;
}

.text-content .md-quote {
  border-left: 8rpx solid #e8e8e8;
  padding-left: 16rpx;
  color: #666;
  margin: 16rpx 0;
}

.text-content .md-li {
  margin: 8rpx 0;
  padding-left: 16rpx;
}

/* 美化代码块 */
.code-block {
  margin: 20rpx 0;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  position: relative;
  font-family: Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace;
  overflow: auto;
  font-size: 28rpx;
  line-height: 1.5;
  border-left: 8rpx solid #ccc;
}

.code-block-header {
  position: absolute;
  top: 0;
  right: 0;
  padding: 4rpx 12rpx;
  background-color: #e0e0e0;
  border-bottom-left-radius: 8rpx;
  color: #555;
  font-size: 22rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  margin-top: 60rpx;
  flex: 1;
}

.empty-icon {
  width: 140rpx;
  height: 140rpx;
  opacity: 0.2;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  letter-spacing: 0.5rpx;
  margin-bottom: 12rpx;
}

.empty-sub-text {
  font-size: 26rpx;
  color: #999;
  letter-spacing: 0.3rpx;
}