/* 样式表 */
.container {
  background: #f5f5f5;
  min-height: 80vh;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 0rpx;
}

.header {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  margin: 0;
  width: 100%;
  box-sizing: border-box;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
}

.settings-icon image {
  width: 40rpx;
  height: 40rpx;
}

.user-card {
  background: #fff;
  padding: 30rpx;
  margin: 0;
  width: 100%;
  box-sizing: border-box;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar-container {
  position: relative;
  margin-right: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.verified-badge {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 28rpx;
  height: 28rpx;
  background: #4080FF;
  border-radius: 50%;
  border: 2rpx solid #fff;
}

.info-content {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
}

.university {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.status {
  font-size: 26rpx;
  color: #999;
}

.edit-btn {
  color: #4080FF;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}

.stats-row {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-num {
  font-size: 32rpx;
  font-weight: 500;
  display: block;
  color: #333;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
  display: block;
}

.function-row {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.function-item image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 12rpx;
}

.function-item text {
  font-size: 26rpx;
  color: #666;
}

.settings-list {
  background: #fff;
  width: 100%;
  margin-top: 0rpx;
  padding: 0;
}

.settings-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  width: 100%;
  box-sizing: border-box;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-item image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.settings-item text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}

/* 数据统计 */
.stats-container {
  display: none;
}

.stat-number {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 菜单列表 */
.menu-list {
  display: none;
}

.menu-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
}

.menu-item:last-child {
  border-bottom: none;
}

/* 底部导航 */
.tab-bar {
  display: none;
}

.tab-item {
  flex: 1;
  text-align: center;
  line-height: 100rpx;
  font-size: 26rpx;
  color: #666;
}

.tab-item.active {
  color: #007AFF;
  font-weight: bold;
}

.login-btn {
  margin-top: 20rpx;
  background: #4080FF;
  color: #fff;
  font-size: 28rpx;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  border: none;
  width: auto;
  display: inline-block;
}

.login-btn::after {
  border: none;
}