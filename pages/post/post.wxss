.post-container {
  display: flex;
  flex-direction: column;
  height: 80vh;
  background: #f8f8f8;
  padding-top: 140rpx; 
  box-sizing: border-box;
}

.post-content-scroll {
  flex: 1;
  overflow: auto;
  padding-bottom: 120rpx;
}


.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx 16rpx;
  background: #fff;
  height: auto; 
  min-height: 60rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky; 
  top: 0;
  z-index: 90;
}

.back-icon {
  width: 88rpx;
  height: 78rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon image {
  width: 36rpx;
  height: 36rpx;
}

.header-title {
  font-size: 42rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  text-align: center;
}

.publish-btn {
  background: #6252ee;
  font-size: 30rpx;
  padding: 0 16rpx;  
  border-radius: 8rpx;
  line-height: 60rpx;
  height: 60rpx;
  width: auto;      
  max-width: 120rpx; 
  margin-left: auto; 
  font-weight: normal;
  text-align: center;
  color: #fff;
  
}

/* 表单区域 */
.post-form {
  padding: 24rpx;
  padding-bottom: 120rpx; 
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.input-box {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.03);
}

.title-input {
  width: 100%;
  font-size: 32rpx;
  color: #333;
}

.content-input {
  width: 100%;
  min-height: 300rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
}

/* 编辑工具栏 */
.editor-toolbar {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.03);
  position: relative;
  z-index: 5;
}

.toolbar-item {
  margin-right: 50rpx;
  color: #666;
  font-size: 30rpx;
  font-weight: 500;
}

.toolbar-item.bold {
  font-weight: bold;
}

.toolbar-item.italic {
  font-style: italic;
}

.toolbar-item image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}

.wiki-button {
  background: #f0f0f0;
  border-radius: 30rpx;
  padding: 8rpx 20rpx;
  margin-left: auto;
  display: flex;
  align-items: center;
}

.wiki-button image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.wiki-button text {
  font-size: 26rpx;
  color: #999;
}

.wiki-button.active {
  background: #f0f0ff;
}

.wiki-button.active text {
  color: #6252ee;
}

/* 话题区域 */
.topic-section {
  padding: 24rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.03);
}

.section-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.topic-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.topic-tag {
  background: #f7f7f7;
  color: #666;
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
}

.add-topic {
  color: #6252ee;
  background: #f0f0ff;
}

/* Wiki卡片 */
.wiki-card {
  background: #f8f4ff;
  padding: 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.03);
  margin-bottom: 120rpx; 
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* Wiki建议区域 */
.wiki-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.wiki-title {
  display: flex;
  align-items: center;
}

.wiki-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.apply-btn {
  color: #6252ee;
  font-size: 28rpx;
  background: rgba(98, 82, 238, 0.1);
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
}

.wiki-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  background: transparent;
  padding: 16rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.wiki-divider {
  height: 1rpx;
  background: rgba(98, 82, 238, 0.2);
  margin: 20rpx 0;
}

/* 文风选择 */
.style-section {
  padding-top: 10rpx;
}

.style-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.style-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.style-option {
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  background: #fff;
}

.style-option.active {
  background: #6252ee;
  color: #fff;
}

/* 底部区域 */
.post-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  z-index: 100;
}

.visibility-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.visibility-option-pill {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
}

.visibility-option-pill.active {
  background: #e8e5ff;
}

.visibility-option-pill image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
  opacity: 0.7;
}

.visibility-option-pill.active image {
  opacity: 1;
}

.visibility-option-pill text {
  font-size: 26rpx;
  color: #666;
}

.visibility-option-pill.active text {
  color: #6252ee;
}

.wiki-switch {
  display: flex;
  align-items: center;
}

.wiki-switch image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.wiki-switch text {
  font-size: 26rpx;
  color: #666;
}

.wiki-switch switch {
  transform: scale(0.7);
  margin-left: 8rpx;
}

/* 完全重新设计的图片选择与预览 */
.image-upload-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 24rpx;
}

.image-upload-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.image-upload-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.image-count {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  text-align: right;
}

.image-count-highlight {
  color: #6252ee;
  font-weight: 500;
}

/* 图片网格布局 */
.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%; /* 宽高比1:1 */
  border-radius: 12rpx;
  overflow: hidden;
}

.image-item image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.add-image-btn {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  background: #f5f5f5;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-image-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 50rpx;
  height: 50rpx;
  color: #999;
  font-size: 50rpx;
  line-height: 1;
}

.delete-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: rgba(0,0,0,0.6);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  z-index: 10;
}

/* 全屏图片预览 */
.image-preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.preview-header {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding: 60rpx 30rpx 20rpx;
  color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(0,0,0,0.5);
}

.preview-title {
  font-size: 30rpx;
}

.preview-close {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.preview-image {
  width: 90%;
  max-height: 60vh;
  border-radius: 12rpx;
  background: #fff;
}

.preview-footer {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: rgba(0,0,0,0.5);
}

.preview-thumbnails {
  display: flex;
  overflow-x: auto;
  margin-top: 20rpx;
  padding: 10rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 12rpx;
  width: 90%;
}

.preview-thumbnail {
  width: 100rpx;
  height: 100rpx;
  margin: 0 10rpx;
  border-radius: 6rpx;
  border: 2rpx solid transparent;
}

.preview-thumbnail.active {
  border-color: #6252ee;
}

.preview-actions {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
  gap: 40rpx;
}

.preview-button {
  padding: 12rpx 30rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #fff;
}

.confirm-btn {
  background: #6252ee;
}

.cancel-btn {
  background: #666;
}

/* 图片上传容器优化 */
.image-upload-container {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin: 20rpx 0;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
  position: relative;
  border: 1rpx solid #eaeaea;
}

.upload-title {
  position: absolute;
  top: -14rpx;
  left: 24rpx;
  background: #6252ee;
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  z-index: 2;
}

/* 图片网格布局 */
.upload-image-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin-top: 20rpx;
}

.upload-image-item {
  position: relative;
  padding-bottom: 100%; /* 保持1:1比例 */
  border-radius: 8rpx;
  overflow: hidden;
  background: #f5f5f5;
  border: 1rpx solid #eaeaea;
}

.upload-image-item image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-image-btn {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: rgba(0,0,0,0.6);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  z-index: 10;
}

/* 添加图片按钮 */
.add-button {
  border: 2rpx dashed #6252ee;
  background: #f0eeff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-icon {
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 48rpx;
  color: #6252ee;
}

.add-text {
  position: absolute;
  top: 65%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 24rpx;
  color: #6252ee;
}

/* 图片状态栏 */
.image-status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
}

.image-count {
  font-size: 24rpx;
  color: #666;
}

.edit-all-btn {
  font-size: 24rpx;
  color: #6252ee;
  background: rgba(98, 82, 238, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

/* 图片预览弹窗优化 */
.image-preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.9);
  z-index: 1000;
  display: flex;
  flex-direction: column;
  padding: 120rpx;
  margin-top: 150rpx; 
}

.preview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
  margin-bottom: 40rpx;
}

.preview-title {
  font-size: 42rpx;
  font-weight: 500;
 
  
}

.preview-close {
  font-size: 52rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
 
}

.preview-swiper {
  flex: 1;
  width: 100%;
  margin-top: 60rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-indicator {
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  margin: 16rpx 0;
}

.thumbnail-scroll {
  white-space: nowrap;
  width: 100%;
}

.preview-thumbnails {
  margin: 16rpx 0;
  width: 100%;
}

.preview-thumbnail {
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  margin: 0 8rpx;
  border-radius: 6rpx;
  border: 2rpx solid transparent;
}

.preview-thumbnail.active {
  border-color: #6252ee;
}

.preview-actions {
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  margin-top: 20rpx;
}

.preview-button {
  padding: 16rpx 0;
  border-radius: 40rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  width: 45%;
}

.crop-btn {
  background: rgba(255, 255, 255, 0.2);
  padding: 20rpx 30rpx;
}

.confirm-btn {
  background: #6252ee;
  padding: 20rpx 30rpx;
}