<!-- 发现页面 -->
<view class="discover-page">
  <!-- 标题栏 -->
  <view class="header">
    <text class="title">发现</text>
    <view class="header-icons">
      <image src="/assets/icons/discover/notification.png" class="icon"></image>
      <image src="/assets/icons/discover/message.png" class="icon"></image>
    </view>
  </view>

  <!-- 校园热点 -->
  <view class="section">
    <view class="section-header">
      <text class="section-title">校园热点</text>
      <text class="update-text">实时更新</text>
    </view>
    <view class="hot-grid">
      <view class="hot-item">
        <image src="/assets/icons/discover/library.png" mode="aspectFill"></image>
        <view class="hot-info">
          <text class="hot-title">期末复习攻略分享</text>
          <text class="hot-count">2.3k 讨论</text>
        </view>
      </view>
      <view class="hot-item">
        <image src="/assets/icons/discover/canteen.png" mode="aspectFill"></image>
        <view class="hot-info">
          <text class="hot-title">校园美食探店</text>
          <text class="hot-count">1.8k 讨论</text>
        </view>
      </view>
    </view>
  </view>

  <!-- AI助手 -->
  <view class="section">
    <view class="section-header">
      <text class="section-title">AI 助手</text>
      <text class="more">查看更多</text>
    </view>
    <view class="ai-grid">
      <view class="ai-item">
        <image src="/assets/icons/discover/robot.png" class="ai-icon"></image>
        <text>作业助手</text>
      </view>
      <view class="ai-item">
        <image src="/assets/icons/discover/translate.png" class="ai-icon"></image>
        <text>英语口语</text>
      </view>
      <view class="ai-item">
        <image src="/assets/icons/discover/plan.png" class="ai-icon"></image>
        <text>保研规划</text>
      </view>
    </view>
  </view>

  <!-- 校园活动 -->
  <view class="section">
    <view class="section-header">
      <text class="section-title">校园活动</text>
      <text class="more">全部活动</text>
    </view>
    <view class="activity-card">
      <image src="/assets/icons/discover/music-festival.png" class="activity-image"></image>
      <text class="activity-title">校园音乐节</text>
      <text class="activity-time">时间：2024-01-20 19:00</text>
      <text class="activity-location">地点：大学生活动中心</text>
    </view>
  </view>

  <!-- 学习资源 -->
  <view class="section">
    <view class="section-header">
      <text class="section-title">学习资源</text>
      <text class="more">更多资源</text>
    </view>
    <view class="resource-grid">
      <view class="resource-item">
        <image src="/assets/icons/discover/book.png" class="resource-icon"></image>
        <text>考研资料</text>
        <text class="resource-count">12个精品资源</text>
      </view>
      <view class="resource-item">
        <image src="/assets/icons/discover/code.png" class="resource-icon"></image>
        <text>编程课程</text>
        <text class="resource-count">8个在线课程</text>
      </view>
    </view>
  </view>

  <!-- 添加发帖按钮 -->
  <view class="post-btn" bindtap="goToPost">
    <image src="/assets/icons/add.png"></image>
  </view>
</view>