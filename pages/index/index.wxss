/* index.wxss */
.container {
  padding: 0;
  background: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  align-items: center;
  gap: 15px;
  padding: 40px 15px 10px;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
}

.logo {
  width: 30px;
  height: 30px;
  color: #4285f4;
}

.header .icon {
  width: 20px;
  height: 20px;
}

.search-box {
  margin: 10px 0;
  background: #f5f5f5;
  border-radius: 0;
  padding: 8px 15px;
  display: flex;
  align-items: center;
  gap: 8px;
  width: 100%;
  box-sizing: border-box;
}

.search-box input {
  flex: 1;
  font-size: 14px;
  color: #333;
}

.search-placeholder {
  color: #999;
}

.nav-grid {
  display: flex;
  justify-content: space-around;
  padding: 15px;
  background: #fff;
  margin-bottom: 10px;
  width: 100%;
  box-sizing: border-box;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
}

.nav-item image {
  width: 45px;
  height: 45px;
}

.nav-item text {
  font-size: 13px;
  color: #333;
}

.post-list {
  padding: 0;
  width: 100%;
  flex: 1;
}

.post-item {
  background: #fff;
  margin-bottom: 15rpx;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  border-radius: 0;
  box-shadow: none;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.author-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.post-time {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.post-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
  margin-bottom: 4rpx;
  line-height: 1.3;
  padding: 0;
}

.post-content {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-top: 0;
  padding-top: 0;
  margin-bottom: 10rpx;
  word-break: break-all;
}

.post-image {
  width: 100%;
  border-radius: 8px;
  margin-bottom: 10px;
}

.post-tags {
  display: flex;
  flex-wrap: wrap;
  margin-top: 12rpx;
}

.post-tag {
  font-size: 24rpx;
  color: #576b95;
  margin-right: 16rpx;
}

.post-footer {
  display: flex;
  justify-content: flex-end;
  padding: 16rpx 0 0;
  margin-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.action-item:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.action-icon {
  width: 36rpx;
  height: 36rpx;
}

.action-item.liked {
  color: #ff5252;
}

.liked-text {
  color: #ff5252;
}

.publish-btn {
  width: 50px;
  height: 50px;
  background: #4285f4;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  right: 20px;
  bottom: 20px;
  box-shadow: 0 2px 8px rgba(66, 133, 244, 0.3);
}

.publish-btn image {
  width: 28px;
  height: 40px;
}

/* 删除不需要的样式 */
.header-left, .header-right {
  display: none;
}

/* 在现有样式基础上添加 */
.image-container {
  margin: 12rpx 0 16rpx;
}

.image-grid {
  display: grid;
  gap: 6rpx;
}

.grid-1 {
  grid-template-columns: 1fr;
}

.grid-2, .grid-4 {
  grid-template-columns: repeat(2, 1fr);
}

.grid-3, .grid-5, .grid-6, .grid-7, .grid-8, .grid-9 {
  grid-template-columns: repeat(3, 1fr);
}

.grid-image {
  width: 100%;
  height: 200rpx;
  border-radius: 6rpx;
  object-fit: cover;
}

.grid-1 .grid-image {
  height: 300rpx;
}

.more-images {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 调整文字大小 */
.nickname {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

/* 调整底部操作栏 */
.action-bar {
  display: flex;
  justify-content: flex-end;
  gap: 32rpx;
}

.post-content-wrapper {
  padding: 0;
  margin: 0;
}

.read-more {
  font-size: 26rpx;
  color: #576b95;
  margin-bottom: 8rpx;
  margin-top: 0;
}

/* 添加 SVG 图标样式 */
.icon-heart, .icon-comment {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-heart svg, .icon-comment svg {
  width: 100%;
  height: 100%;
  fill: #bbb;
  transition: all 0.3s ease;
}

.icon-heart.icon-heart-filled svg {
  fill: #ff5252;
}

/* 添加点赞动画效果 */
@keyframes heartBeat {
  0% { transform: scale(1); }
  15% { transform: scale(1.25); }
  30% { transform: scale(1); }
  45% { transform: scale(1.15); }
  60% { transform: scale(1); }
}

/* 确保动画应用到点赞图标 */
.action-item.liked .action-icon {
  animation: heartBeat 0.6s;
}

.no-content {
  color: #999;
  font-style: italic;
}

/* 添加空内容提示的样式 */
.empty-message {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  color: #999;
  font-size: 28rpx;
  text-align: center;
  padding: 0 40rpx;
}

.loading-message {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 调整帖子内容布局 */
.post-body {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
/* 评论预览区域样式 */
.comment-preview-section {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
  font-size: 26rpx;
}

.comment-preview {
  margin-top: 10rpx;
  padding: 10rpx 0;
}

.comment-preview-item {
  display: flex;
  font-size: 28rpx;
  margin-bottom: 6rpx;
  flex-wrap: wrap;
}

.comment-author {
  color: #576b95;
  margin-right: 8rpx;
  font-weight: 500;
}

.comment-content {
  color: #333;
  word-break: break-all;
  flex: 1;
}

.view-more-comments {
  font-size: 26rpx;
  color: #576b95;
  margin-top: 10rpx;
}

/* 评论输入容器 */
.comment-input-container {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1000;
}

.comment-input-mask {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.comment-input-box {
  position: relative;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 1001;
}

.comment-input {
  flex: 1;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.word-count.warning {
  color: #ff5252;
}

.comment-upload-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 20rpx;
}

.comment-upload-btn image {
  width: 40rpx;
  height: 40rpx;
}

.comment-send-btn {
  width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #4B6EFF;
  color: white;
  font-size: 28rpx;
  border-radius: 35rpx;
  text-align: center;
  padding: 0;
}

.comment-send-btn[disabled] {
  background-color: #cccccc;
}

.comment-images-preview {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.image-preview {
  width: 120rpx;  /* 缩小预览图尺寸 */
  height: 120rpx;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}

.image-preview image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-image {
  position: absolute;
  top: 0;
  right: 0;
  width: 36rpx;  /* 缩小删除按钮 */
  height: 36rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  border-bottom-left-radius: 8rpx;
}

.add-image-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  color: #576b95;
  font-size: 26rpx;
}

.add-image-btn image {
  width: 32rpx;  /* 缩小添加图片图标 */
  height: 32rpx;
  margin-right: 10rpx;
}

/* 分割线样式 */
.divider {
  height: 1px;
  background-color: #eeeeee;
  margin: 10rpx 0;
  width: 100%;
}

/* 帖子图片样式 */
.post-images {
  margin-top: 16rpx;
}

.post-images-grid {
  display: flex;
  flex-wrap: nowrap;
  gap: 8rpx;
}

.post-image-item {
  flex: 1;
  aspect-ratio: 1/1;
  height: 220rpx;
  width: 220rpx;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}

.post-image-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 单张图片时也保持正方形 */
.single-image .post-image-item {
  flex: 0 0 220rpx;
  margin-right: auto;
}

/* 图片数量标识 */
.image-count {
  position: absolute;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  padding: 4rpx 12rpx;
  font-size: 24rpx;
  border-top-left-radius: 8rpx;
}

/* 扩展编辑区域样式 */
.expanded-editor {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.editor-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.editor-close {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
}

.expanded-textarea {
  width: 100%;
  min-height: 150rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.comment-preview-area {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 10rpx;
}

.preview-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.preview-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
}

.editor-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  min-width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 35rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
}

.cancel {
  background: #f5f5f5;
  color: #666;
}

.confirm {
  background: #4B6EFF;
  color: white;
}

.confirm[disabled] {
  background: #cccccc;
}

/* 在现有样式中添加收藏按钮样式 */
.action-item.favorited {
  color: #ffaa00; /* 收藏使用金黄色 */
}

.favorited-text {
  color: #ffaa00;
}

/* 收藏动画效果 */
@keyframes favorite {
  0% { transform: scale(1); }
  50% { transform: scale(1.2); }
  100% { transform: scale(1); }
}

.action-item.favorited .action-icon {
  animation: favorite 0.5s;
}
